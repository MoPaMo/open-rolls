{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DnDCharacter",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The character's name."
    },
    "race": {
      "type": "string",
      "description": "The character's race (e.g., Human, Elf, Dwarf)."
    },
    "class": {
      "type": "string",
      "description": "The character's class (e.g., Fighter, Wizard, Rogue)."
    },
    "level": {
      "type": "integer",
      "minimum": 1,
      "description": "The character's level."
    },
    "background": {
      "type": "string",
      "description": "background story / profession."
    },
    "attributes": {
      "type": "object",
      "properties": {
        "strength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "description": "Strength attribute score."
        },
        "dexterity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "description": "Dexterity attribute score."
        },
        "constitution": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "description": "Constitution attribute score."
        },
        "intelligence": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "description": "Intelligence attribute score."
        },
        "wisdom": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "description": "Wisdom attribute score."
        },
        "charisma": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "description": "Charisma attribute score."
        }
      },
      "required": [
        "strength",
        "dexterity",
        "constitution",
        "intelligence",
        "wisdom",
        "charisma"
      ],
      "description": "Core attributes"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of skills the character is proficient in."
    },
    "proficiencies": {
      "type": "object",
      "properties": {
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Languages the character knows."
        },
        "tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tools the character is proficient with."
        }
      },
      "description": "Proficiencies including languages and tools."
    },
    "spells": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the spell."
          },
          "level": {
            "type": "integer",
            "minimum": 0,
            "description": "Spell level."
          },
          "components": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Components required to cast the spell (e.g., V, S, M)."
          },
          "description": {
            "description": "Description of what the spell does.",
            "type": "string"
          }
        },
        "required": ["name", "level"],
        "description": "Details of each spell the character can cast."
      },
      "description": "List of spells the character can use."
    },
    "abilities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the ability or feature."
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the ability."
          }
        },
        "required": ["name", "description"],
        "description": "Details of each ability or feature the character has."
      },
      "description": "List of abilities and special features."
    }
  },
  "required": ["name", "race", "class", "level", "attributes"],
  "additionalProperties": false
}
